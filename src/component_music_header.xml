<?xml version="1.0" encoding="UTF-8"?>
<!--
  component_music_header.xml
  Reusable music header card with artwork + track info
  Width: fits within ~310px container
-->
<component xmlns="http://lvgl.io/xml/ui/1.0" id="media_header_card">

  <!-- Main container card -->
  <obj id="header_card_root" style="dark_card"
       width="100%" height="130"
       layout="FLEX" flex_flow="ROW" flex_align_main="START"
       pad_all="6" pad_column="8">

    <!-- Artwork area (square, left side) -->
    <obj id="artwork_container" style="artwork_placeholder"
         width="80" height="80">
      
      <!-- Placeholder icon (music note) -->
      <label id="artwork_icon" style="label_secondary"
             text="â™ª" align="CENTER"/>
      
      <!-- Actual image widget (hidden until artwork loaded) -->
      <!-- In C++: set src and show when available -->
      <image id="artwork_image" width="80" height="80"
             hidden="true" align="CENTER"/>
    </obj>

    <!-- Track info column (right of artwork) -->
    <obj id="track_info_container"
         width="200" height="80"
         layout="FLEX" flex_flow="COLUMN" flex_align_main="START"
         pad_all="0" pad_row="3">

      <!-- Title: scrolls if too long -->
      <label id="track_title_label" style="label_primary"
             text="No media playing"
             width="195"
             long_mode="SCROLL_CIRCULAR"/>

      <!-- Artist -->
      <label id="track_artist_label" style="label_secondary"
             text="Artist"
             width="195"
             long_mode="DOT"/>

      <!-- Album -->
      <label id="track_album_label" style="label_secondary"
             text="Album"
             width="195"
             long_mode="DOT"/>
    </obj>

  </obj>

</component>
