<?xml version="1.0" encoding="UTF-8"?>
<!--
  component_music_progress.xml
  Reusable music progress card with bar + time display
  Width: fits within ~310px container
-->
<component xmlns="http://lvgl.io/xml/ui/1.0" id="media_progress_card">

  <!-- Main container card -->
  <obj id="progress_card_root" style="dark_card"
       width="100%" height="50"
       layout="FLEX" flex_flow="COLUMN" flex_align_main="CENTER"
       flex_align_cross="CENTER"
       pad_all="6" pad_row="6">

    <!-- Progress bar -->
    <bar id="progress_bar" style="progress_bar_bg"
         width="290" height="10"
         range_min="0" range_max="100" value="0">
      <style_indicator style="progress_bar_indicator"/>
    </bar>

    <!-- Time display: current / total -->
    <label id="progress_time_label" style="label_secondary"
           text="0:00 / 0:00"
           align="CENTER"/>

  </obj>

</component>
