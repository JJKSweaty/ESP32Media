<?xml version="1.0" encoding="UTF-8"?>
<!--
  component_process_row.xml
  Reusable process row for the task list
  Contains: close/kill button + process info label
  Width: fits within ~168px list container
-->
<component xmlns="http://lvgl.io/xml/ui/1.0" id="process_row">

  <!-- Row container: button-style for clickability -->
  <button id="process_row_btn" style="list_btn"
          width="100%" height="28"
          layout="FLEX" flex_flow="ROW" flex_align_main="START"
          flex_align_cross="CENTER"
          pad_left="4" pad_right="4">

    <!-- Kill button icon (X) -->
    <label id="kill_icon" style="label_secondary"
           text="âœ•"
           width="16"/>

    <!-- Process info: "12.3% chrome.exe" -->
    <label id="process_text_label" style="label_primary"
           text="0.0% process"
           width="140"
           long_mode="DOT"/>

  </button>

</component>
